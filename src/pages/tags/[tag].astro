---
import BaseLayout from '../../layouts/Base.astro';
import BlogPost from '../../components/BlogPost.astro';

export async function getStaticPaths() {
  const allPosts = await Astro.glob('../posts/*.md');

  const uniqueTags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];

  return uniqueTags.map((tag) => {
    const filteredPosts = allPosts.filter((post) => post.frontmatter.tags.includes(tag));
    return [
    {params: {tag: "kubernetes"}, props: {posts: allPosts}},
    {params: {tag: "GKE"}, props: {posts: allPosts}},
    {params: {tag: "community"}, props: {posts: allPosts}},
    {params: {tag: "AWS"}, props: {posts: allPosts}},
    {params: {tag: "helm"}, props: {posts: allPosts}},
    {params: {tag: "tutorial"}, props: {posts: allPosts}}
    {params: {tag: "EKS"}, props: {posts: allPosts}}
  ];
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---
<Base pageTitle={tag}>
  <p>Posts tagged with {tag}</p>
  <ul>
    {posts.map((post) => <BlogPost url={post.url} title={post.frontmatter.title}/>)}
  </ul>
</Base>